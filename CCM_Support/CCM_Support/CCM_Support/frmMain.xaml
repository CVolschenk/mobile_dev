<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="CCM_Support.frmMain"
              
              Title="Client Selection">
  <StackLayout>
    <ListView x:Name="lstClient" ItemSelected="SelectedItem_Change">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding Client}" />  
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    <ActivityIndicator IsRunning="False" x:Name="Main_Activity"/>
    <Button Text="TestPage" Clicked="Test"/>
  </StackLayout>
</ContentPage>  
  


