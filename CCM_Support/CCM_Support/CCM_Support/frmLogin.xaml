<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CCM_Support.frmLogin"
             Title="Login">
  <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
    <Entry Text="{Binding Username}" Placeholder="Username" x:Name ="txtUsername"/>
    <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True" x:Name="txtPassword"/>
    <Button Text="Login" Clicked="Login_Clicked" x:Name="btnLogin" />
    <ActivityIndicator IsRunning="False" x:Name="Login_Activity"/>
  </StackLayout>
</ContentPage>